@using BibotifyApp.Models
@model Sarkı
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bibotify</title>
    <link rel="icon" href="/images/bibotify.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/stlye.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" integrity="sha512-jnSuA4Ss2PkkikSOLtYs8BlYIeeIK1h99ty4YfvRPAlzr377vr3CXDb7sb7eEEBYjDtcYj+AjBH3FLv5uSJuXg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/bootstrap-5/css/bootstrap.css">
    <script src='http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js'></script>

</head>
<body class="bg-dark">
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/anasayfa"><img src="/images/bibotify.png" alt=""></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-5 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/anasayfa">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Kategoriler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-disabled="true">İletisim</a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Şarkı ara" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Ara</button>
                </form>
                <ul class="navbar-nav m-auto me-5 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link üyeol" href="kayıt"><i class="fa-solid fa-user-plus"></i> Kayıt ol</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link girisyap" href="giris"><i class="fa-solid fa-arrow-right-to-bracket"></i> Giriş yap</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="col">
            <div class="row">
                <p style="padding: 20px 20px 20px 40px; color: aliceblue; font-weight: bold; font-size: 23px;">@Model.Ad</p>
                <div class="col-lg-6">
                    <img style="margin-left: 20px; height: 400px; width: 500px; padding: 0;" src="/images/@(Model.Resim)" alt="">
                    <audio controls style="margin-left: 100px; margin-top: 20px; padding: 5px; border-radius: 0%;">
                        <source src="/@(Model.Sarki)" type="audio/mpeg">
                    </audio>
                </div>
                <script>
                    $(function () {

                        var $el, $ps, $up, totalHeight;

                        $(".sidebar-box .button").click(function () {

                            totalHeight = 0

                            $el = $(this);
                            $p = $el.parent();
                            $up = $p.parent();
                            $ps = $up.find("p:not('.read-more')");

                            $ps.each(function () {
                                totalHeight += $(this).outerHeight();
                            });

                            $up
                                .css({
                                    "height": $up.height(),
                                    "max-height": 9999
                                })
                                .animate({
                                    "height": totalHeight
                                });

                            $p.fadeOut();

                            return false;

                        });

                    });
                </script>
                <div class="col-lg-6">
                    <div class="sidebar-box" style="color: aliceblue;">
                        <p style="font-weight: bold; padding: 10px;">
                            @Model.Sozler
                        </p>
                        <p class="read-more"><a href="#" class="button" style="text-decoration: none; color: #48ae2f;">Sözleri gör!</a></p>
                    </div>


                </div>

            </div>






        </div>
    </div>














    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-7Pi/otdlbbCR+LnW+F7PwFcSDJOuUJB3OxtEHbg4vSMvzvJjde4Po1v4BR9Gdc9aXNUNFVUY+SK51wWT8WF0Gg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="bootstrap-5/js/bootstrap.js" integrity="sha512-7Pi/otdlbbCR+LnW+F7PwFcSDJOuUJB3OxtEHbg4vSMvzvJjde4Po1v4BR9Gdc9aXNUNFVUY+SK51wWT8WF0Gg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>